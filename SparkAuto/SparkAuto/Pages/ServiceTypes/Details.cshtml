@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />

<h2 class="text-info"> Details Service Type</h2>

<br />

<div>
    <div class="border backgroundWhite">

        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" disabled/>
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" disabled />
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">

                <partial name="_DetailsEditAndBackToListButton" />

            </div>
        </div>

    </div>

</div>
