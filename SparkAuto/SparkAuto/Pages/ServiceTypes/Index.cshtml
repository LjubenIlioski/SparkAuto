@page
@model SparkAuto.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";

}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class=" text-info"> Service Type Info</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info"> <i class="fas fa-plus"></i>  Create New</a>

        </div>
    </div>

    <br />

    <div>
        @if (Model.ServiceType.Count == 0) {
        <p> No Service Type exists. Please Create a new Service Type</p>
        }else
        {<table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(x => x.ServiceType[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.ServiceType[0].Price)
                </th>
                <th>

                </th>

            </tr>
            @foreach (var item in Model.ServiceType)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(x => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(x => item.Price)
                    </td>

                    <td style="width:150px">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id"> <i class="fas fa-edit"></i>  </a>

                            <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.Id"> <i class="fas fa-info-circle"></i>  </a>

                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id"> <i class="fas fa-trash-alt"></i>  </a>

                        </div>
                    </td>
                </tr>

            }
            </table>
            }
    </div>

</div>



